{% extends 'base.html.twig' %}

{% block title %}Escalate Ticket{% endblock %}

{% block body %}
    <h1>Escalate ticket</h1>

    <form method="post">
        <select name="premiumAgents">
            {% for user in users %}
                {% if roles['SLA'] in user.roles and  roles['MANAGER'] not in user.roles and  user.username != loggedInUser.username   %}
                    <option value="{{ user.id }}">{{ user.username }}</option>
                {% endif %}
            {% endfor %}
        </select>
        <button type="submit" name="save">Assign Second Line Agent</button>
    </form>

    <a href="{{ path('ticket_index') }}">back to list</a>
{% endblock %}
