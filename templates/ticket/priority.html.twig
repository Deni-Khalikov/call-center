{% extends 'base.html.twig' %}

{% block title %}Adjust Priority Ticket{% endblock %}

{% block body %}
    <div class="row d-flex justify-content-center">
        <div id="priority" class="form">
            <h1 class="h3 mb-2 font-weight-normal">Adjust Priority ticket</h1>
            <hr>
            <br>
            <form method="post">
                <div class="form-group">
                    <select class="form-control" name="priorities">
                        {% for key,priority in priorities %}
                            <option value="{{ priority }}">{{ priority }}</option>
                        {% endfor %}
                    </select>
                </div>
                <button class="btn mb-3" id="saveBtn" type="submit" name="save">Adjust priority</button>
            </form>
            <a class="text-center mt-2" href="{{ path('ticket_index') }}">back to list</a>
        </div>
    </div>
{% endblock %}
