{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<div class="row d-flex justify-content-center">
    <div id="showUser mt-5" class="form">
        <h1 class="mb-2 font-weight-normal">User</h1>
        <br>
            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Username</th>
                    <td>{{ user.username }}</td>
                </tr>
                <tr>
                    <th>Roles</th>
                    <td>{{ user.roles ? user.roles|join(', ', ' and ') : '' }}</td>
                </tr>
                </tbody>
            </table>
            <div class="text-center">
                {% if roles['FLA'] in user.roles %}
                    <a  class="btn mb-3" id="saveBtn" href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                {% endif %}
                {{ include('user/_delete_form.html.twig') }}

                <a href="{{ path('user_index') }}">back to list</a>
            </div>
        </div>
    </div>
{% endblock %}
